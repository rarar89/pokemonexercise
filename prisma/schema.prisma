generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          Int      @id @default(autoincrement())
  name        String
  pokemons    Pokemon[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())
}

model Pokemon {
  id             Int     @id @default(autoincrement())
  name           String
  baseExperience Int
  abilities      String[]
  types          String[]
  image          String
  team           Team    @relation(fields: [teamId], references: [id])
  teamId         Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt @default(now())
}